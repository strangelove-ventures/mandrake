{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "noEmit": false,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force"
  }
}